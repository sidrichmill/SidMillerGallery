---

title: Gallery
layout: 'base.njk'

pagination:
  data: images.keywords
  size: 1
  alias: cltag
permalink: /cloudinarytags/{{ cltag | slug }}/

---

<main id="main-content" tabindex="-1" class="gallery-wrapper">

<h2>{{ cltag }}</h2>

<ul class="gallery">

{% for image in images.images %}
  {% for tag in image.keywords %}
    {% if cltag === tag %}
      {% if image.width >= image.height*2 %}
        <li class="thumbnail panoramic">
      {% elseif image.width > image.height %}
        <li class="thumbnail landscape">
      {% elseif image.width <= image.height %}
        <li class="thumbnail portrait">
      {% else %}
        <li class="thumbnail">
      {% endif %}
      
       {# <a href="/cloudinaryImages/{{ image.file | slug }}/"><img class="thumbnail-img" src="{{ cloudinary.baseUrl }}{{ cloudinary.small }}{{ image.urlSlug }}" alt="placeholder alr" loading="lazy"></a> #}
       <a href="/images/{{ image.file | slug }}/">
          <img 
            class="thumbnail-img" 
            srcset="{{ imagekit.baseUrl }}{{ imagekit.xsmall }}{{ image.urlSlug }} 200w,
                    {{ imagekit.baseUrl }}{{ imagekit.medium }}{{ image.urlSlug }} 1200w,
                    {{ imagekit.baseUrl }}{{ imagekit.large }}{{ image.urlSlug }} 2000w"
            sizes="(max-width: 800px) 200px, (max-width: 1200px) 1200px, (max-width: 2000px) 2000px"
            src="{{ imagekit.baseUrl }}{{ imagekit.small }}{{ image.urlSlug }}"
            alt="placeholder alt" 
            loading="lazy">
       </a>
      </li>
    {% endif %}
  {% endfor %}
{% endfor %}


</ul>

</main>