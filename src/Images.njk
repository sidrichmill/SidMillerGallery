---
layout: 'base.njk'

tags: 

pagination:
  data: cloudinaryImages
  size: 1
  alias: image
permalink: "gallery/{{ image.file | slug }}/index.html"

---

<div class="container">
    <div class="image-wrapper">
        <img class="hero-image" src="{{ cloudinary.baseUrl }}{{ image.urlSlug }}" alt="placeholder image alt">
    </div>
    
    <div class="tag-list">
    
            <label for="tags">Choose another tag:</label>
                <select name="tags" id="tags" onchange="location.assign(this.value)">
                    {% for tag in image.tags %}
                        <option value="/tags/{{ tag | slug }}/">{{ tag }}</option>
                    {% endfor %}
                </select>
        <h3>Tags</h3>
            <ul>
                {% for tag in image.tags %}
                    <li class="tag-item"><a href="/tags/{{ tag | slug }}">{{ tag }}</a></li>
                {% endfor %}


            </ul>
    </div>


</div>