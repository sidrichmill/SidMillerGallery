---
layout: 'base.njk'

tags: 

pagination:
  data: cloudinaryImages
  size: 1
  alias: image
permalink: "gallery/{{ image.file | slug }}/index.html"

---

<div class="container">
    <div class="image-wrapper">
        <img class="hero-image" src="{{ cloudinary.baseUrl }}{{ image.urlSlug }}" alt="placeholder image alt">
    </div>
    
    <div class="tag-list">
        <h3>Tags</h3>
            <ul>
                {% for tag in image.tags %}
                    <li class="tag-item"><a href="/tags/{{ tag | slug }}">{{ tag }}</a></li>
                {% endfor %}
            </ul>
    </div>


</div>