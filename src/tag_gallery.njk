---

title: Gallery
layout: 'base.njk'

pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/

---

<main id="main-content" tabindex="-1" class="gallery-wrapper">

<h2>Gallery of {{ tag }} photos</h2>

<ul class="gallery">

{% set taglist = collections[ tag ] %}
{% for image in taglist | reverse %}

  <li class="thumbnail">
    <a href="{{ image.url }}"><img class="thumbnail-img" src="{{ image.data.imageSrc }}" alt="{{ image.data.imageAlt }}"></a></div>
  </li>

{% endfor %}


</ul>

</main>